<style>
  .scholarship {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    padding-left: 80px;
    padding-right: 80px;
    padding-top: 12px;
    box-sizing: border-box;
    width: 100%;
  }
  
  .scholarship-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-xxl);
    margin-bottom: var(--spacing-xxl);
  }
  
  .info-card {
    background: var(--color-white);
    padding: calc(var(--spacing-xl) + 5px);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    margin-bottom: var(--spacing-lg);
  }
  
  .info-card h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-dark);
    margin-bottom: var(--spacing-lg);
    text-align: center;
  }
  
  .requirements {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }
  
  .requirement {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    padding: calc(var(--spacing-md) + 5px);
    background: var(--color-light-gray);
    border-radius: var(--border-radius);
  }
  
  .req-icon {
    width: 40px;
    height: 40px;
    background: var(--color-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-white);
    flex-shrink: 0;
  }
  
  .req-icon svg {
    width: 20px;
    height: 20px;
  }
  
  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-md);
  }
  
  .benefit {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: calc(var(--spacing-sm) + 5px);
    background: var(--color-light-gray);
    border-radius: var(--border-radius);
  }
  
  .benefit-icon {
    font-size: 1.5rem;
  }
  
  .timeline-section h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-dark);
    margin-bottom: var(--spacing-lg);
    text-align: center;
  }
  
  .timeline {
    position: relative;
    padding-left: var(--spacing-lg);
  }
  
  .timeline::before {
    content: '';
    position: absolute;
    left: 20px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--color-primary);
  }
  
  .timeline-item {
    display: flex;
    align-items: center;
    margin-bottom: var(--spacing-lg);
    position: relative;
  }
  
  .timeline-date {
    position: absolute;
    left: -30px;
    width: 80px;
    height: 60px;
    background: var(--color-primary);
    border-radius: var(--border-radius);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-white);
    font-weight: 600;
    font-size: 0.8rem;
    text-align: center;
    box-shadow: var(--shadow-sm);
  }
  
  .timeline-content {
    margin-left: 70px;
    background: var(--color-white);
    padding: calc(var(--spacing-md) + 5px);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
    flex: 1;
  }
  
  .timeline-content h4 {
    color: var(--color-dark);
    margin-bottom: var(--spacing-xs);
    font-weight: 600;
  }
  
  .timeline-content p {
    color: var(--color-gray);
    margin: 0;
  }
  
  .note {
    background: var(--color-yellow);
    padding: calc(var(--spacing-md) + 5px);
    border-radius: var(--border-radius);
    margin-top: var(--spacing-lg);
  }
  
  .note p {
    margin: 0;
    color: var(--color-dark);
    font-size: 0.9rem;
  }
  
  .cta-section {
    text-align: center;
  }
  
  .btn-large {
    display: inline-block;
    padding: calc(var(--spacing-md) + 5px) calc(var(--spacing-xxl) + 5px);
    border: none;
    border-radius: var(--border-radius);
    font-family: var(--font-primary);
    font-weight: 600;
    text-decoration: none;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 1.2rem;
    background: var(--color-primary);
    color: var(--color-white);
  }
  
  .btn-large:hover {
    background: var(--color-brown);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    text-decoration: none;
    color: var(--color-white);
  }
  
  @media (max-width: 768px) {
    .scholarship-content {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }
    
    .benefits-grid {
      grid-template-columns: 1fr;
    }
    
    .timeline {
      padding-left: var(--spacing-md);
    }
    
    .timeline-date {
      left: -25px;
      width: 60px;
      height: 50px;
      font-size: 0.7rem;
    }
    
    .timeline-content {
      margin-left: 50px;
    }
  }
}
</style>
